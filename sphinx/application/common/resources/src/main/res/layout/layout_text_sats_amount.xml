<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/text_view_sats_amount"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:fontFamily="@font/roboto_regular"
        android:gravity="center_vertical"
        android:textAlignment="textStart"
        android:textColor="@color/text"
        android:textSize="@dimen/default_text_size_sub_headline"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="21 000" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/text_view_sats_unit_label"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginStart="4dp"
        android:fontFamily="@font/roboto_regular"
        android:textAlignment="textStart"
        android:textColor="@color/secondaryTextSent"
        android:textSize="@dimen/default_text_size_sub_headline"
        app:layout_constraintBaseline_toBaselineOf="@+id/text_view_sats_amount"
        app:layout_constraintStart_toEndOf="@+id/text_view_sats_amount"
        tools:text="sat" />

</androidx.constraintlayout.widget.ConstraintLayout>
