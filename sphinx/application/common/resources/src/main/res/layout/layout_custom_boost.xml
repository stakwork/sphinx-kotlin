<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/layout_constraint_boost_button_container"
    android:minWidth="@dimen/custom_boost_width"
    android:layout_width="wrap_content"
    android:layout_height="@dimen/custom_boost_height"
    android:background="@drawable/button_background_white_rad_48"
    android:backgroundTint="@color/primaryGreen"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent">

    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/edit_text_custom_boost"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/text"
        android:fontFamily="@font/roboto_medium"
        android:gravity="center"
        android:textAlignment="center"
        android:background="@android:color/transparent"
        android:paddingHorizontal="@dimen/default_half_layout_margin"
        android:hint="0"
        android:textColorHint="@android:color/white"
        android:ellipsize="end"
        android:textSize="@dimen/custom_boost_text_size"
        android:inputType="number"
        android:digits="0123456789"
        android:imeOptions="actionDone"
        android:singleLine="true"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/image_view_feed_boost_button" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/image_view_feed_boost_button"
        android:layout_width="@dimen/custom_boost_button_xy"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/custom_boost_margin"
        android:padding="@dimen/custom_boost_button_padding"
        android:background="@drawable/button_background_white_rad_48"
        android:backgroundTint="@android:color/white"
        android:src="@drawable/ic_boost"
        android:tint="@color/primaryGreen"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>