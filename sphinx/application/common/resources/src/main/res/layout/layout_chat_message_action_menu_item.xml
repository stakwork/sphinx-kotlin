<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout_constraint_chat_message_action_menu_item"
    android:layout_width="match_parent"
    android:layout_height="@dimen/default_tap_target_xy"
    android:paddingHorizontal="@dimen/default_layout_margin">


    <!-- Material Icon -->
    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/text_view_chat_message_action_icon"
        android:layout_width="@dimen/default_message_action_image_xy"
        android:layout_height="@dimen/default_message_action_image_xy"
        android:fontFamily="@font/material_icons_regular"
        android:gravity="center"
        android:textColor="@color/text"
        android:textSize="@dimen/default_text_size_headline"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/text_view_chat_message_action_title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="@string/material_icon_name_message_action_copy_text"
        tools:visibility="visible" />


    <!-- Image Asset Icon -->
    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/image_view_chat_message_action_icon"
        android:layout_width="@dimen/default_message_action_image_xy"
        android:layout_height="@dimen/default_message_action_image_xy"
        android:gravity="center"
        android:scaleType="fitCenter"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/text_view_chat_message_action_title"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:srcCompat="@drawable/sphinx_white_logo"
        tools:visibility="visible" />


    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/text_view_chat_message_action_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/default_inner_spacing_list_item_title"
        android:fontFamily="@font/roboto_regular"
        android:lines="1"
        android:textColor="@color/text"
        android:textSize="@dimen/default_text_size_body"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/text_view_chat_message_action_icon"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Copy Text" />

</androidx.constraintlayout.widget.ConstraintLayout>
