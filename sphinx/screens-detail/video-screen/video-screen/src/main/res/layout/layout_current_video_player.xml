<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:background="@color/headerBG">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layout_constraint_video_players"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/layout_constraint_video_view_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <VideoView
                android:id="@+id/video_view_video_player"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:layout_constraintTop_toTopOf="parent" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/layout_constraint_bottom_controls"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/selectedMessageBackground"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/default_layout_margin"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent">

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/text_view_play_pause_button"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/material_icon_name_play_button"
                        android:textColor="@android:color/white"
                        android:textSize="30sp"
                        android:fontFamily="@font/material_icons_regular"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent" />

                    <androidx.appcompat.widget.AppCompatSeekBar
                        android:id="@+id/seek_bar_current_progress"
                        style="?android:attr/seekBarStyle"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:secondaryProgressTint="@color/receivedIcon"
                        android:thumbTint="@color/receivedIcon"
                        android:progressDrawable="@drawable/podcast_player_seek_bar_progress"
                        android:thumb="@drawable/podcast_player_seek_bar_thumb"
                        android:progress="0"
                        app:layout_constraintTop_toTopOf="@+id/text_view_play_pause_button"
                        app:layout_constraintBottom_toBottomOf="@+id/text_view_play_pause_button"
                        app:layout_constraintEnd_toStartOf="@+id/text_view_current_time"
                        app:layout_constraintStart_toEndOf="@+id/text_view_play_pause_button" />

                    <TextView
                        android:id="@+id/text_view_current_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="@+id/text_view_play_pause_button"
                        app:layout_constraintBottom_toBottomOf="@+id/text_view_play_pause_button"
                        tools:text="00:00"/>

                </androidx.constraintlayout.widget.ConstraintLayout>

            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <WebView
            android:id="@+id/web_view_youtube_video_player"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <TextView
        android:id="@+id/text_view_video_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="@dimen/default_half_layout_margin"
        android:layout_marginHorizontal="@dimen/default_layout_margin"
        android:fontFamily="@font/roboto_regular"
        android:textColor="@color/text"
        android:maxLines="2"
        android:textSize="@dimen/default_text_size_headline"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/layout_constraint_video_players"
        tools:text="Who Will Road the Builds?" />

