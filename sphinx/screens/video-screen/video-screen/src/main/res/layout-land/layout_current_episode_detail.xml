<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:background="@color/headerBG"
    >

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraint_layout_video_player"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintTop_toTopOf="parent"
        >
        <VideoView
            android:id="@+id/video_view_video_player"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_constraintTop_toTopOf="parent"
            />

        <WebView
            android:id="@+id/web_view_youtube_video_player"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_constraintTop_toTopOf="parent"
            />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <TextView
        android:id="@+id/text_view_current_video_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/default_half_layout_margin"
        android:fontFamily="@font/roboto_regular"
        android:textColor="@color/text"
        android:maxLines="2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/constraint_layout_video_player"
        tools:text="Who Will Road the Builds?"
        />

    <!-- TODO: Add a seekbar -->

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraint_layout_episode_details"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/headerBG"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        >
        <TextView
            android:id="@+id/text_view_current_video_view_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/default_half_layout_margin"
            android:fontFamily="@font/roboto_regular"
            android:textColor="@color/secondaryText"
            android:maxLines="2"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/text_view_current_video_description"
            tools:text="23 000 views"
            />

        <TextView
            android:id="@+id/text_view_current_video_published_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/default_half_layout_margin"
            android:fontFamily="@font/roboto_regular"
            android:textColor="@color/secondaryText"
            android:maxLines="2"
            app:layout_constraintStart_toEndOf="@+id/text_view_current_video_view_count"
            app:layout_constraintBottom_toTopOf="@+id/text_view_current_video_description"
            tools:text="22 Sep"
            />

        <TextView
            android:id="@+id/text_view_current_video_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/default_half_layout_margin"
            android:layout_marginTop="@dimen/default_layout_margin"
            android:fontFamily="@font/roboto_regular"
            android:textColor="@color/secondaryText"
            android:maxLines="3"
            app:layout_constraintBottom_toTopOf="@+id/view_detail_divider"
            tools:text="This video about setting up layouts on the Android view and all the jazz."
            />
        <!-- TODO: Add a read more -->

        <View
            android:id="@+id/view_detail_divider"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="@dimen/default_half_layout_margin"
            android:background="@color/secondaryText"
            app:layout_constraintBottom_toTopOf="@+id/constraint_layout_subscription_bar"
            />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/constraint_layout_subscription_bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            >
            <androidx.cardview.widget.CardView
                android:id="@+id/card_view_contributor_image_wrapper"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/default_layout_margin"
                app:cardCornerRadius="@dimen/default_feed_image_xy"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                >

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/image_view_contributor_image"
                    android:layout_width="@dimen/default_feed_watch_channel_image_xy"
                    android:layout_height="@dimen/default_feed_watch_channel_image_xy"
                    android:scaleType="centerCrop"
                    app:srcCompat="@drawable/ic_tribe" />

            </androidx.cardview.widget.CardView>
            <TextView
                android:id="@+id/text_view_contributor_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/default_half_layout_margin"
                android:fontFamily="@font/roboto_regular"
                android:textColor="@color/secondaryText"
                android:maxLines="3"
                app:layout_constraintStart_toEndOf="@+id/card_view_contributor_image_wrapper"
                app:layout_constraintEnd_toStartOf="@+id/button_subscribe"
                app:layout_constraintTop_toTopOf="@+id/card_view_contributor_image_wrapper"
                app:layout_constraintBottom_toBottomOf="@+id/card_view_contributor_image_wrapper"
                tools:text="BTC Sesssions"
                />
            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_subscribe"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/subscribe"
                app:cornerRadius="@dimen/default_radius"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                />
    </androidx.constraintlayout.widget.ConstraintLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
