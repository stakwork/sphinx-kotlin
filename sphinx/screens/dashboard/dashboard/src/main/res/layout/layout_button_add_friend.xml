<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/layout_constraint_button_add_friend"
    android:layout_width="wrap_content"
    android:layout_height="@dimen/add_buttons_height"
    android:background="@drawable/button_background_white_rad_48"
    android:backgroundTint="@color/primaryGreen"
    android:paddingHorizontal="10dp">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/add_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/add_icon"
        android:textColor="@color/primaryText"
        android:textSize="@dimen/add_buttons_icon_xy"
        android:fontFamily="@font/material_icons_regular"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:paddingRight="8dp"
        android:paddingBottom="2dp"
        android:text="@string/add_friend"
        android:textColor="@color/primaryText"
        android:textSize="@dimen/add_buttons_text_size"
        android:fontFamily="@font/roboto_regular"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/add_icon"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
