<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="@dimen/chat_message_big_inner_padding"
    android:paddingBottom="@dimen/chat_message_big_inner_padding"
    android:visibility="gone"
    tools:visibility="visible">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/text_view_deleted_message_timestamp"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:fontFamily="@font/roboto_italic"
        android:lines="1"
        android:text="@string/deleted_message_label_text"
        android:textColor="@color/secondaryText"
        android:textSize="@dimen/default_text_size_sub_headline"
        android:background="@color/body"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:gravity="start"
        tools:text="6:15 pm" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/text_view_delete_message_label"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:fontFamily="@font/roboto_italic"
        android:lines="1"
        android:text="@string/deleted_message_label_text"
        android:textColor="@color/secondaryText"
        android:textSize="@dimen/default_text_size_sub_headline"
        android:background="@color/body"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_view_deleted_message_timestamp"
        tools:gravity="start" />

</androidx.constraintlayout.widget.ConstraintLayout>
