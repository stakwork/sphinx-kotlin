<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout_constraint_chat_menu_options"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/headerBG"
    android:paddingHorizontal="@dimen/options_menu_horizontal_padding">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layout_constraint_menu_option_camera"
        android:layout_width="match_parent"
        android:layout_height="@dimen/options_menu_option_height"
        android:clickable="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/image_view_menu_option_camera_icon"
            android:layout_width="@dimen/option_icon_width"
            android:layout_height="match_parent"
            android:src="@drawable/ic_camera"
            android:tint="@color/mainBottomIcons"
            app:layout_constraintStart_toStartOf="parent" />

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:fontFamily="@font/roboto_regular"
            android:gravity="center"
            android:text="@string/camera_attachment_option"
            android:textColor="@color/primaryText"
            android:textSize="@dimen/option_title_text_size"
            android:layout_marginStart="@dimen/option_text_left_margin"
            app:layout_constraintStart_toEndOf="@+id/image_view_menu_option_camera_icon" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/options_menu_option_divider_height"
            android:background="@color/divider"
            app:layout_constraintBottom_toBottomOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layout_constraint_menu_option_media_library"
        android:layout_width="match_parent"
        android:layout_height="@dimen/options_menu_option_height"
        android:clickable="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/layout_constraint_menu_option_camera">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/image_view_menu_option_media_library_icon"
            android:layout_width="@dimen/option_icon_width"
            android:layout_height="match_parent"
            android:src="@drawable/ic_media_library"
            android:tint="@color/mainBottomIcons"
            app:layout_constraintStart_toStartOf="parent" />

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:fontFamily="@font/roboto_regular"
            android:gravity="center"
            android:text="@string/library_attachment_option"
            android:textColor="@color/primaryText"
            android:textSize="@dimen/option_title_text_size"
            android:layout_marginStart="@dimen/option_text_left_margin"
            app:layout_constraintStart_toEndOf="@+id/image_view_menu_option_media_library_icon" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/options_menu_option_divider_height"
            android:background="@color/divider"
            app:layout_constraintBottom_toBottomOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layout_constraint_menu_option_gif"
        android:layout_width="match_parent"
        android:layout_height="@dimen/options_menu_option_height"
        android:clickable="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/layout_constraint_menu_option_media_library">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/text_view_menu_option_gif_icon"
            android:layout_width="@dimen/option_icon_width"
            android:layout_height="match_parent"
            android:fontFamily="@font/material_icons_regular"
            android:gravity="center"
            android:text="@string/material_icon_name_gif"
            android:textColor="@color/mainBottomIcons"
            android:textSize="40sp"
            app:layout_constraintStart_toStartOf="parent" />

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:fontFamily="@font/roboto_regular"
            android:gravity="center"
            android:text="@string/gif_attachment_option"
            android:textColor="@color/primaryText"
            android:textSize="@dimen/option_title_text_size"
            android:layout_marginStart="@dimen/option_text_left_margin"
            app:layout_constraintStart_toEndOf="@+id/text_view_menu_option_gif_icon" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/options_menu_option_divider_height"
            android:background="@color/divider"
            app:layout_constraintBottom_toBottomOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layout_constraint_menu_option_file"
        android:layout_width="match_parent"
        android:layout_height="@dimen/options_menu_option_height"
        android:clickable="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/layout_constraint_menu_option_gif">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/text_view_menu_option_file_icon"
            android:layout_width="@dimen/option_icon_width"
            android:layout_height="match_parent"
            android:fontFamily="@font/material_icons_regular"
            android:gravity="center"
            android:text="@string/material_icon_name_file_attachment"
            android:textColor="@color/mainBottomIcons"
            android:textSize="32sp"
            app:layout_constraintStart_toStartOf="parent" />

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:fontFamily="@font/roboto_regular"
            android:gravity="center"
            android:text="@string/file_attachment_option"
            android:textColor="@color/primaryText"
            android:textSize="@dimen/option_title_text_size"
            android:layout_marginStart="@dimen/option_text_left_margin"
            app:layout_constraintStart_toEndOf="@+id/text_view_menu_option_file_icon" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/options_menu_option_divider_height"
            android:background="@color/divider"
            app:layout_constraintBottom_toBottomOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layout_constraint_menu_option_paid_message"
        android:layout_width="match_parent"
        android:layout_height="@dimen/options_menu_option_height"
        android:clickable="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/layout_constraint_menu_option_file">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/image_view_menu_option_paid_message_icon"
            android:layout_width="@dimen/option_icon_width"
            android:layout_height="match_parent"
            android:src="@drawable/ic_paid_message"
            android:tint="@color/mainBottomIcons"
            app:layout_constraintStart_toStartOf="parent" />

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:fontFamily="@font/roboto_regular"
            android:gravity="center"
            android:text="@string/paid_message_attachment_option"
            android:textColor="@color/primaryText"
            android:textSize="@dimen/option_title_text_size"
            android:layout_marginStart="@dimen/option_text_left_margin"
            app:layout_constraintStart_toEndOf="@+id/image_view_menu_option_paid_message_icon" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/options_menu_option_divider_height"
            android:background="@color/divider"
            app:layout_constraintBottom_toBottomOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layout_constraint_menu_option_payment_request"
        android:layout_width="match_parent"
        android:layout_height="@dimen/options_menu_option_height"
        android:clickable="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/layout_constraint_menu_option_paid_message">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/image_view_menu_option_payment_request_icon"
            android:layout_width="@dimen/option_icon_width"
            android:layout_height="match_parent"
            android:paddingLeft="@dimen/option_icon_arrow_padding"
            android:paddingRight="@dimen/option_icon_arrow_padding"
            android:src="@drawable/ic_request"
            android:tint="@color/mainBottomIcons"
            app:layout_constraintStart_toStartOf="parent" />

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:fontFamily="@font/roboto_regular"
            android:gravity="center"
            android:text="@string/request_attachment_option"
            android:textColor="@color/primaryText"
            android:textSize="@dimen/option_title_text_size"
            android:layout_marginStart="@dimen/option_text_left_margin"
            app:layout_constraintStart_toEndOf="@+id/image_view_menu_option_payment_request_icon" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/options_menu_option_divider_height"
            android:background="@color/divider"
            app:layout_constraintBottom_toBottomOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layout_constraint_menu_option_payment_send"
        android:layout_width="match_parent"
        android:layout_height="@dimen/options_menu_option_height"
        android:clickable="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/layout_constraint_menu_option_payment_request">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/image_view_menu_option_payment_send_icon"
            android:layout_width="@dimen/option_icon_width"
            android:layout_height="match_parent"
            android:paddingLeft="@dimen/option_icon_arrow_padding"
            android:paddingRight="@dimen/option_icon_arrow_padding"
            android:src="@drawable/ic_send"
            android:tint="@color/mainBottomIcons"
            app:layout_constraintStart_toStartOf="parent" />

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:fontFamily="@font/roboto_regular"
            android:gravity="center"
            android:text="@string/send_attachment_option"
            android:textColor="@color/primaryText"
            android:textSize="@dimen/option_title_text_size"
            android:layout_marginStart="@dimen/option_text_left_margin"
            app:layout_constraintStart_toEndOf="@+id/image_view_menu_option_payment_send_icon" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/options_menu_option_divider_height"
            android:background="@color/divider"
            app:layout_constraintBottom_toBottomOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/text_view_menu_option_cancel"
        android:layout_width="match_parent"
        android:layout_height="@dimen/options_menu_cancel_button_height"
        android:clickable="true"
        android:fontFamily="@font/montserrat_regular"
        android:gravity="center"
        android:text="@string/attachments_menu_cancel"
        android:textColor="@color/primaryRed"
        android:textSize="@dimen/cancel_title_text_size"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/layout_constraint_menu_option_payment_send" />

</androidx.constraintlayout.widget.ConstraintLayout>