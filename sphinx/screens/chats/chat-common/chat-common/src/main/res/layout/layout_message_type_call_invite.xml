<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout_constraint_message_type_message_type_call_invite"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:visibility="gone"
    tools:layout_width="200dp"
    tools:background="@color/receivedMsgBG"
    tools:visibility="visible">


    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/text_view_join_call_header_icon"
        style="@style/ActionButtonLabelIcon"
        android:layout_width="0dp"
        android:layout_height="@dimen/default_tap_target_xy"
        android:gravity="center"
        android:text="@string/material_icon_name_call_button"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/text_view_join_call_header_label"
        style="@style/ActionButtonLabelText"
        android:layout_width="0dp"
        android:layout_height="@dimen/default_tap_target_xy"
        android:layout_marginStart="@dimen/default_inner_spacing_list_item_title"
        android:gravity="center"
        android:text="@string/join_call_header_label_text"
        android:textColor="@color/text"
        app:layout_constraintBottom_toBottomOf="@id/text_view_join_call_header_icon"
        app:layout_constraintStart_toEndOf="@id/text_view_join_call_header_icon"
        app:layout_constraintTop_toTopOf="@id/text_view_join_call_header_icon" />


    <!-- Join By Audio Button -->

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/button_join_by_audio"
        style="@style/Widget.AppCompat.ImageButton"
        android:layout_width="0dp"
        android:layout_height="@dimen/default_tap_target_xy"
        android:layout_marginTop="@dimen/default_vertical_spacing_action_button_column"
        android:backgroundTint="@color/primaryBlue"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/text_view_join_call_header_icon" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/text_view_join_by_audio_label"
        style="@style/ActionButtonLabelText"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:gravity="center"
        android:text="@string/media_type_label_audio"
        android:textColor="@color/text"
        app:layout_constraintBottom_toBottomOf="@id/button_join_by_audio"
        app:layout_constraintEnd_toEndOf="@id/button_join_by_audio"
        app:layout_constraintStart_toStartOf="@id/button_join_by_audio"
        app:layout_constraintTop_toTopOf="@id/button_join_by_audio" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/text_view_join_by_audio_icon"
        style="@style/ActionButtonLabelIcon"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/default_layout_margin"
        android:text="@string/material_icon_name_microphone"
        app:layout_constraintBottom_toBottomOf="@id/button_join_by_audio"
        app:layout_constraintEnd_toEndOf="@id/button_join_by_audio"
        app:layout_constraintTop_toTopOf="@id/button_join_by_audio" />


    <!-- Join By Video Button -->

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/button_join_by_video"
        style="@style/Widget.AppCompat.ImageButton"
        android:layout_width="0dp"
        android:layout_height="@dimen/default_tap_target_xy"
        android:layout_marginTop="@dimen/default_vertical_spacing_action_button_column"
        android:backgroundTint="@color/primaryGreen"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/button_join_by_audio" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/text_view_join_by_video_label"
        style="@style/ActionButtonLabelText"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:gravity="center"
        android:text="@string/media_type_label_video"
        android:textColor="@color/text"
        app:layout_constraintBottom_toBottomOf="@id/button_join_by_video"
        app:layout_constraintEnd_toEndOf="@id/button_join_by_video"
        app:layout_constraintStart_toStartOf="@id/button_join_by_video"
        app:layout_constraintTop_toTopOf="@id/button_join_by_video" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/text_view_join_by_video_icon"
        style="@style/ActionButtonLabelIcon"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/default_layout_margin"
        android:text="@string/material_icon_name_videocam"
        app:layout_constraintBottom_toBottomOf="@id/button_join_by_video"
        app:layout_constraintEnd_toEndOf="@id/button_join_by_video"
        app:layout_constraintTop_toTopOf="@id/button_join_by_video" />


    <!-- Copy Link Button -->

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/button_copy_link"
        android:layout_width="0dp"
        android:layout_height="@dimen/default_tap_target_xy"
        android:layout_marginTop="@dimen/default_vertical_spacing_action_button_column"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/button_join_by_video" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/text_view_copy_link_label"
        style="@style/ActionButtonLabelText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/default_layout_margin"
        android:gravity="end"
        android:text="@string/message_action_label_copy_link"
        android:textColor="@color/text"
        app:layout_constraintBottom_toBottomOf="@id/button_copy_link"
        app:layout_constraintEnd_toStartOf="@id/text_view_copy_link_icon"
        app:layout_constraintStart_toStartOf="@id/button_copy_link"
        app:layout_constraintTop_toTopOf="@id/button_copy_link" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/text_view_copy_link_icon"
        style="@style/ActionButtonLabelIcon"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/default_layout_margin"
        android:text="@string/material_icon_name_message_action_copy_text"
        app:layout_constraintBottom_toBottomOf="@id/button_copy_link"
        app:layout_constraintEnd_toEndOf="@id/button_copy_link"
        app:layout_constraintTop_toTopOf="@id/button_copy_link" />

</androidx.constraintlayout.widget.ConstraintLayout>
