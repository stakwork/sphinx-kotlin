<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout_constraint_message_type_paid_video_message_sent"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:visibility="gone"
    tools:layout_width="300dp"
    tools:visibility="visible">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/status_row_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/status_badge_row_padding"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:elevation="2dp">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/attachment_price_amount_label"
            style="@style/PaymentStatusBadge"
            android:textAllCaps="true"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/attachment_price_status_label"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintHorizontal_chainStyle="spread_inside"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="21 SAT" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/attachment_price_status_label"
            style="@style/PaymentStatusBadge"
            android:textAllCaps="false"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/attachment_price_amount_label"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="Pending" />
    </androidx.constraintlayout.widget.ConstraintLayout>


    <VideoView
        android:id="@+id/video_view"
        android:layout_width="0dp"
        android:layout_height="@dimen/message_type_video_attachment_height"
        app:layout_constraintBottom_toTopOf="@id/text_view_optional_message_body"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <!--  TODO: Create and apply drawable for Circular Play Button  -->
    <androidx.appcompat.widget.AppCompatImageButton
        android:id="@+id/button_play_video"
        android:layout_width="@dimen/video_attachment_play_pause_button_xy"
        android:layout_height="@dimen/video_attachment_play_pause_button_xy"
        android:src="@drawable/sphinx_white_logo"
        app:layout_constraintBottom_toBottomOf="@id/video_view"
        app:layout_constraintEnd_toEndOf="@id/video_view"
        app:layout_constraintStart_toStartOf="@id/video_view"
        app:layout_constraintTop_toTopOf="@id/video_view" />


    <!--  TODO: Create and apply drawable for Circular Pause Button  -->
    <androidx.appcompat.widget.AppCompatImageButton
        android:id="@+id/button_pause_video"
        android:layout_width="@dimen/video_attachment_play_pause_button_xy"
        android:layout_height="@dimen/video_attachment_play_pause_button_xy"
        android:src="@drawable/sphinx_white_logo"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@id/video_view"
        app:layout_constraintEnd_toEndOf="@id/video_view"
        app:layout_constraintStart_toStartOf="@id/video_view"
        app:layout_constraintTop_toTopOf="@id/video_view"
        tools:visibility="gone" />


    <!-- Optional Message   -->
    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/text_view_optional_message_body"
        style="@style/chat_message_body_text"
        android:layout_width="0dp"
        android:padding="@dimen/background_message_holder_default_padding"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/video_view"
        android:visibility="gone"
        tools:text="Contrary to popular belief, Lorem Ipsum is not simply random text. Latin from 45 BC, making it over 2000 years old."
        tools:visibility="visible" />

</androidx.constraintlayout.widget.ConstraintLayout>
