<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:background="@drawable/background_message_holder_in_last">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layout_constraint_message_type_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent">

        <!--   Standard Text Message  -->
        <include
            android:id="@+id/include_message_type_message"
            layout="@layout/layout_message_type_message"
            tools:visibility="visible" />

        <!--   Direct Payment Message  -->
        <include
            android:id="@+id/include_message_type_direct_payment"
            layout="@layout/layout_message_type_direct_payment"
            tools:visibility="gone" />

        <!--  Image Attachment  -->
        <include
            android:id="@+id/include_message_type_image_attachment"
            layout="@layout/layout_message_type_attachment_image"
            tools:visibility="gone" />

        <!--  File Attachment  -->
        <include
            android:id="@+id/include_message_type_file_attachment"
            layout="@layout/layout_message_type_attachment_file"
            tools:visibility="gone" />

        <!--  Audio Attachment  -->
        <include
            android:id="@+id/include_message_type_audio_attachment"
            layout="@layout/layout_message_type_attachment_audio"
            tools:visibility="gone" />


        <!--  Video Attachment  -->
        <include
            android:id="@+id/include_message_type_video_attachment"
            layout="@layout/layout_message_type_attachment_video"
            tools:visibility="gone" />

        <!--  Paid Message Received Overlays  -->
        <include
            android:id="@+id/include_message_received_paywall_overlays"
            layout="@layout/layout_message_received_paywall_overlays"
            tools:visibility="gone" />


        <!--  Paid Text Message Sent  -->
        <include
            android:id="@+id/include_message_type_paid_text_message_sent"
            layout="@layout/layout_message_type_paid_text_message_sent"
            tools:visibility="gone" />


        <!--  Paid Image Message Sent  -->
        <include
            android:id="@+id/include_message_type_paid_image_message_sent"
            layout="@layout/layout_message_type_paid_image_message_sent"
            tools:visibility="gone" />


        <!--  Paid Video Message Sent  -->
        <include
            android:id="@+id/include_message_type_paid_video_message_sent"
            layout="@layout/layout_message_type_paid_video_message_sent"
            tools:visibility="gone" />

    </androidx.constraintlayout.widget.ConstraintLayout>


    <!-- "Paid" Message Details  -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layout_constraint_paid_message_details_holder"
        android:layout_width="match_parent"
        android:layout_height="@dimen/paid_message_details_holder_height"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@+id/layout_constraint_message_type_container"
        tools:background="@color/primaryGreen"
        tools:layout_editor_absoluteX="16dp"
        tools:visibility="visible">


        <!-- Payment Direction Icon: Sent -->
        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/image_view_payment_sent_icon"
            android:layout_width="@dimen/icon_container_message_payment_direction_xy"
            android:layout_height="@dimen/icon_container_message_payment_direction_xy"
            android:tint="@color/textMessages"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/text_view_payment_status_label"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/ic_sent"
            tools:visibility="visible" />


        <!-- Payment Direction Icon: Received -->
        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/image_view_payment_received_icon"
            android:layout_width="@dimen/icon_container_message_payment_direction_xy"
            android:layout_height="@dimen/icon_container_message_payment_direction_xy"
            android:tint="@color/receivedIcon"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/ic_received"
            tools:visibility="visible" />


        <!-- Payment Status Icon -->
        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/text_view_payment_status_icon"
            android:layout_width="@dimen/material_icon_text_size_message_payment_status"
            android:layout_height="@dimen/material_icon_text_size_message_payment_status"
            android:fontFamily="@font/material_icons_regular"
            android:text="@string/material_icon_name_payment_accepted"
            android:textAlignment="center"
            android:textColor="@color/textMessages"
            android:textSize="@dimen/material_icon_text_size_message_payment_status"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/text_view_payment_status_label"
            app:layout_constraintStart_toEndOf="@id/image_view_payment_received_icon"
            app:layout_constraintTop_toTopOf="parent"
            tools:visibility="visible" />


        <!--  Payment Status Label  -->
        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/text_view_payment_status_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/default_inner_spacing_list_item_title"
            android:fontFamily="@font/montserrat_semi_bold"
            android:textAllCaps="true"
            android:textColor="@color/textMessages"
            android:textSize="13sp"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@id/text_view_payment_status_icon"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="@string/paid_message_details_status_label_pay"
            tools:visibility="visible" />


        <!--  Amount to Pay Label  -->
        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/text_view_amount_to_pay_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/roboto_regular"
            android:textColor="@color/textMessages"
            android:textSize="@dimen/default_text_size_caption1"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toEndOf="@+id/text_view_payment_status_label"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="2000 SAT"
            tools:visibility="visible" />


        <!-- Spinner for when payment is processing -->
        <ProgressBar
            android:id="@+id/progress_wheel_processing_payment"
            android:layout_width="@dimen/loading_wheel_message_payment_processing_xy"
            android:layout_height="@dimen/loading_wheel_message_payment_processing_xy"
            android:indeterminate="true"
            android:indeterminateTint="@color/primaryText"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toEndOf="@+id/text_view_payment_status_label"
            app:layout_constraintTop_toTopOf="parent"
            tools:visibility="visible" />


    </androidx.constraintlayout.widget.ConstraintLayout>


    <!--    Boost Details -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layout_constraint_message_type_boost"
        android:layout_width="match_parent"
        android:layout_height="@dimen/message_type_boost_height"
        app:layout_constraintTop_toBottomOf="@id/layout_constraint_paid_message_details_holder"
        android:visibility="gone"
        tools:visibility="visible">

        <!-- Boost Icon -->

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/image_view_boost_message_icon"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@drawable/ic_received"
            app:layout_constraintEnd_toStartOf="@+id/include_boost_amount_text_group"
            app:layout_constraintStart_toStartOf="parent"
            tools:backgroundTint="@color/receivedIcon" />

        <!--Amount Text -->

        <include
            android:id="@+id/include_boost_amount_text_group"
            layout="@layout/layout_text_sats_amount"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginHorizontal="@dimen/default_layout_margin"
            app:layout_constraintEnd_toStartOf="@id/include_boost_reactions_group"
            app:layout_constraintStart_toEndOf="@+id/image_view_boost_message_icon" />

        <!-- Boost Reactions -->

        <include
            android:id="@+id/include_boost_reactions_group"
            layout="@layout/layout_message_type_boost_reactions_group"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            app:layout_constraintEnd_toEndOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
