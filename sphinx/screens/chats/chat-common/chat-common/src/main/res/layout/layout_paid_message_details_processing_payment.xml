<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout_constraint_paid_message_details_processing_payment"
    android:layout_width="match_parent"
    android:layout_height="@dimen/paid_message_details_holder_height"
    android:visibility="gone"
    tools:background="@color/primaryGreen"
    tools:visibility="visible">


    <!-- Payment Direction Icons -->

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraint_layout_payment_direction_icons"
        android:layout_width="@dimen/icon_container_message_payment_direction_xy"
        android:layout_height="@dimen/icon_container_message_payment_direction_xy"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/text_view_payment_status_label"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintHorizontal_chainStyle="spread_inside"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/image_view_sent_icon"
            android:layout_width="@dimen/icon_container_message_payment_direction_xy"
            android:layout_height="@dimen/icon_container_message_payment_direction_xy"
            android:tint="@color/textMessages"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/ic_sent"
            tools:visibility="visible" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/image_view_received_icon"
            android:layout_width="@dimen/icon_container_message_payment_direction_xy"
            android:layout_height="@dimen/icon_container_message_payment_direction_xy"
            android:tint="@color/receivedIcon"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/ic_received"
            tools:visibility="visible" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/text_view_payment_status_label"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:fontFamily="@font/roboto_medium"
        android:text="@string/paid_message_label_processing_payment"
        android:textAllCaps="false"
        android:textColor="@color/textMessages"
        android:textSize="@dimen/default_text_size_sub_headline"
        android:layout_marginHorizontal="@dimen/default_inner_spacing_list_item_title"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/constraint_layout_payment_direction_icons"
        app:layout_constraintEnd_toStartOf="@id/progress_wheel_processing_loading"
        app:layout_constraintTop_toTopOf="parent" />


    <ProgressBar
        android:id="@+id/progress_wheel_processing_loading"
        android:layout_width="@dimen/loading_wheel_message_payment_processing_xy"
        android:layout_height="@dimen/loading_wheel_message_payment_processing_xy"
        android:indeterminate="true"
        android:indeterminateTint="@color/primaryText"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/text_view_payment_status_label"
        app:layout_constraintTop_toTopOf="parent"
        tools:visibility="visible" />


</androidx.constraintlayout.widget.ConstraintLayout>
