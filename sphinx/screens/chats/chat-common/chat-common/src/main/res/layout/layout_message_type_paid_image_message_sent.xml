<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout_constraint_message_type_paid_image_message_sent"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:visibility="gone"
    tools:layout_width="300dp"
    tools:visibility="visible">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/status_row_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/status_badge_row_padding"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:elevation="2dp">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/attachment_price_amount_label"
            style="@style/PaymentStatusBadge"
            android:textAllCaps="true"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/attachment_price_status_label"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintHorizontal_chainStyle="spread_inside"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="21 SAT" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/attachment_price_status_label"
            style="@style/PaymentStatusBadge"
            android:textAllCaps="false"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/attachment_price_amount_label"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="Pending" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <!--  Loaded Image  -->
    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/image_view_message_image_attachment"
        android:layout_width="match_parent"
        android:layout_height="@dimen/message_type_image_attachment_height"
        android:clickable="true"
        android:focusable="true"
        android:foreground="?attr/selectableItemBackground"
        android:scaleType="center"
        app:layout_constraintBottom_toTopOf="@id/text_view_optional_message_body"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:srcCompat="@tools:sample/backgrounds/scenic"
        tools:viewBindingIgnore="true" />


    <!-- Optional Message   -->
    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/text_view_optional_message_body"
        style="@style/chat_message_body_text"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:padding="@dimen/background_message_holder_default_padding"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/image_view_message_image_attachment"
        tools:text="Contrary to popular belief, Lorem Ipsum is not simply random text. Latin from 45 BC, making it over 2000 years old."
        tools:visibility="visible" />

</androidx.constraintlayout.widget.ConstraintLayout>
