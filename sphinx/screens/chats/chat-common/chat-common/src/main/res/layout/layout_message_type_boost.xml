<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:id="@+id/layout_constraint_message_type_boost"
  android:layout_width="match_parent"
  android:layout_height="wrap_content"
  android:paddingHorizontal="@dimen/default_layout_margin"
  tools:background="@color/sentMsgBG">


  <!-- Boost Icon -->

  <androidx.appcompat.widget.AppCompatImageView
    android:id="@+id/image_view_boost_message_icon"
    android:layout_width="@dimen/icon_container_boost_message_width"
    android:layout_height="@dimen/icon_container_boost_message_height"
    android:src="@drawable/ic_received"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toStartOf="@+id/include_boost_amount_text_group"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    tools:backgroundTint="@color/receivedIcon" />


  <!--Amount Text -->

  <include
    android:id="@+id/include_boost_amount_text_group"
    layout="@layout/layout_message_type_boost_amount_text_group"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="@dimen/default_layout_margin"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toStartOf="@id/include_boost_reaction_image_holder_1"
    app:layout_constraintStart_toEndOf="@+id/image_view_boost_message_icon"
    app:layout_constraintTop_toTopOf="parent"
    tools:visibility="visible" />


  <!-- Overlapping circles with images for boosters (AKA "reactions") -->

  <include
    android:id="@+id/include_boost_reaction_image_holder_1"
    layout="@layout/layout_message_type_boost_reaction_image_holder"
    android:visibility="gone"
    android:layout_width="26dp"
    android:layout_height="26dp"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintStart_toEndOf="@id/include_boost_amount_text_group"
    app:layout_constraintEnd_toStartOf="@id/include_boost_reaction_image_holder_2"
    tools:visibility="visible" />

  <include
    android:id="@+id/include_boost_reaction_image_holder_2"
    layout="@layout/layout_message_type_boost_reaction_image_holder"
    android:layout_width="26dp"
    android:layout_height="26dp"
    android:visibility="gone"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toStartOf="@id/include_boost_reaction_image_holder_3"
    app:layout_constraintStart_toEndOf="@id/include_boost_reaction_image_holder_1"
    app:layout_constraintTop_toTopOf="parent"
    tools:visibility="visible" />

  <include
    android:id="@+id/include_boost_reaction_image_holder_3"
    layout="@layout/layout_message_type_boost_reaction_image_holder"
    android:layout_width="26dp"
    android:layout_height="26dp"
    android:visibility="gone"
    android:layout_marginEnd="12sp"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toStartOf="@+id/text_view_boost_reaction_count"
    app:layout_constraintStart_toEndOf="@id/include_boost_reaction_image_holder_2"
    app:layout_constraintTop_toTopOf="parent"
    tools:visibility="visible" />


  <!-- Count Label if more than 3 boosters -->

  <androidx.appcompat.widget.AppCompatTextView
    android:id="@+id/text_view_boost_reaction_count"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:textColor="@color/secondaryTextSent"
    android:textSize="@dimen/message_type_boost_amount_unit_text_size"
    android:visibility="gone"
    android:layout_marginStart="16dp"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    tools:text="21"
    tools:visibility="visible" />

</androidx.constraintlayout.widget.ConstraintLayout>
