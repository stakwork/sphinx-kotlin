<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="@dimen/message_type_boost_reaction_image_holder_width"
  android:layout_height="@dimen/message_type_boost_reaction_image_holder_height">

  <androidx.appcompat.widget.AppCompatTextView
    android:id="@+id/text_view_reaction_user_initials"
    android:layout_width="0dp"
    android:layout_height="0dp"
    android:layout_centerInParent="true"
    android:background="@drawable/chat_initials_circle"
    android:fontFamily="@font/montserrat_regular"
    android:gravity="center"
    android:singleLine="true"
    android:textColor="@android:color/white"
    android:textSize="17sp"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    tools:text="TT" />

  <androidx.appcompat.widget.AppCompatImageView
    android:id="@+id/image_view_reaction_user_avatar"
    android:layout_width="0dp"
    android:layout_height="0dp"
    android:layout_centerInParent="true"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    tools:src="@drawable/ic_profile_avatar_circle" />

</androidx.constraintlayout.widget.ConstraintLayout>
